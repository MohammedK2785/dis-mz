{{!-- Mza3et Homepage Hero - Compact & Professional --}}
{{!-- Only renders on discovery routes (homepage/categories) --}}
<section class="mza-hero py-6 md:py-8" dir="rtl">
  <div class="wrap">
    <div class="text-center max-w-3xl mx-auto px-4">
      {{!-- Hero Title --}}
      <h1 class="text-2xl md:text-3xl font-bold mb-2 tracking-tight" style="color: var(--primary);">
        {{theme-setting "hero_title"}}
      </h1>
      
      {{!-- Hero Subtitle --}}
      <p class="text-sm md:text-base mb-6" style="color: var(--primary-medium); opacity: 0.8;">
        {{theme-setting "hero_subtitle"}}
      </p>
      
      {{!-- Search Input Wrapper --}}
      <div class="mza-hero__search-wrapper max-w-2xl mx-auto">
        {{!-- We'll style the Discourse search component via CSS --}}
        {{!-- The actual search component is rendered by Discourse in the header --}}
        {{!-- This is a placeholder to show where search styling will be applied --}}
        <div class="mza-hero__search-placeholder">
          <input 
            type="text" 
            placeholder="ابحث عن تقارير، عروض، نصائح..." 
            class="w-full h-11 md:h-12 px-4 rounded-xl border transition-all"
            style="border-color: var(--mza-border); background: var(--mza-surface); color: var(--primary);"
            readonly
            onclick="document.querySelector('.search-menu button')?.click()"
          />
        </div>
      </div>
    </div>
  </div>
</section>
