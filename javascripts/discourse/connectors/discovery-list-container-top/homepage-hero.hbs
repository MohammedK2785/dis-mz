{{!-- Mza3et Homepage Hero - Compact & Professional --}}
{{!-- Only renders on discovery routes (homepage/categories) --}}
<section class="mza-hero mza-section-card py-4 md:py-5" dir="rtl">
  <div class="wrap">
    <div class="text-center max-w-3xl mx-auto px-4">
      {{!-- Hero Title --}}
      <h1 class="mza-section-title text-xl md:text-2xl mb-1">
        {{theme-setting "hero_title"}}
      </h1>
      
      {{!-- Hero Subtitle --}}
      <p class="mza-section-subtitle text-xs md:text-sm">
        {{theme-setting "hero_subtitle"}}
      </p>
    </div>
  </div>
</section>
