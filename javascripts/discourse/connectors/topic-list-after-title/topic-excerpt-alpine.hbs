{{!-- Native "Read More" Component for Long Topic Excerpts --}}
{{!-- Uses the HTML <details>/<summary> element - no JavaScript required --}}
{{#if @outletArgs.topic.excerpt}}
  <details
    class="topic-excerpt-alpine"
    dir="rtl"
  >
    {{!-- Toggle button - visible on mobile, hidden on desktop via CSS --}}
    {{!-- aria-label provides accessible name; visual label is provided by CSS ::before --}}
    <summary class="mza-excerpt-toggle" aria-label="قراءة المزيد / إخفاء النص"></summary>

    {{!-- Excerpt content shown when details is open --}}
    <div class="mza-excerpt-content">
      {{{@outletArgs.topic.excerpt}}}
    </div>
  </details>
{{/if}}
