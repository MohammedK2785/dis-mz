{{!-- Alpine.js "Read More" Component for Long Topic Excerpts --}}
{{!-- Only renders when topic has an excerpt (typically pinned topics) --}}
{{#if @outletArgs.topic.excerpt}}
  <div 
    class="topic-excerpt-alpine"
    x-data="{ expanded: false }"
    dir="rtl"
  >
    {{!-- Excerpt container with conditional clamping --}}
    <div 
      class="mza-excerpt-content"
      :class="{ 'mza-excerpt-clamped': !expanded }"
    >
      {{{@outletArgs.topic.excerpt}}}
    </div>
    
    {{!-- Toggle button for mobile - hidden on desktop --}}
    <button 
      type="button"
      class="mza-excerpt-toggle md:hidden"
      @click="expanded = !expanded"
      x-text="expanded ? 'إخفاء النص' : 'قراءة المزيد'"
    >
      قراءة المزيد
    </button>
  </div>
{{/if}}
