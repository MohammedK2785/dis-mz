{{!-- Mza3et Theme - Single Clean Subnav Bar --}}
{{!-- One navigation bar under Discourse header using Tailwind v4 utilities --}}

{{!-- Mobile-only Portal Navigation (Morocco & World only) --}}
<nav class="mza-mobile-portal-nav w-full border-b backdrop-blur-md md:hidden" style="border-color: var(--mza-border);" aria-label="بوابات الموقع">
  <div class="wrap">
    <div class="flex gap-2 overflow-x-auto py-3 px-2 scrollbar-thin" style="scroll-behavior: smooth;">
      {{#if (theme-setting "nav_morocco_url")}}
        <a href="{{theme-setting 'nav_morocco_url'}}" class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap flex-shrink-0 transition-all" style="background: var(--mza-surface-2); border: 1px solid var(--mza-border); color: var(--primary);">
          {{theme-setting "nav_morocco_label"}}
        </a>
      {{/if}}
      {{#if (theme-setting "nav_world_url")}}
        <a href="{{theme-setting 'nav_world_url'}}" class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap flex-shrink-0 transition-all" style="background: var(--mza-surface-2); border: 1px solid var(--mza-border); color: var(--primary);">
          {{theme-setting "nav_world_label"}}
        </a>
      {{/if}}
    </div>
  </div>
</nav>

{{!-- Desktop Navigation (all links, hidden on mobile) --}}
